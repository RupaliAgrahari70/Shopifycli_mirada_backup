</div>
<div>
  {{ section.settings.video | video_tag: autoplay: true,controls:true,height:"200px"}}  
</div>
<div>
{% if section.settings.video_url_id != blank %}
  <div class="video-wrapper">
    {% if section.settings.video_url_id.type == 'youtube' %}
      <iframe src="https://www.youtube.com/embed/{{ section.settings.video_url_id.id }}"  allowfullscreen> </iframe>
    {% elsif section.settings.video_url_id.type == 'vimeo' %}
      <iframe src="https://player.vimeo.com/video/{{ section.settings.video_url_id.id }}" allowfullscreen></iframe>
    {% endif %}
  </div>
{% endif %}
</div>
<div style="background:{{ section.settings.color-back_id }};height:100px;width:100%;margin-top:20px;">
  <p>This div has a background color set using the color background input field.</p>
</div>
<style>
       {{ section.settings.heading_font | font_face }}
    .font-text{
    font-family: {{ section.settings.heading_font.family }},
                 {{ section.settings.heading_font.fallback_families }};
    }
    .for-radio{
        height:100px;
        width:100%;
        background-color:pink;
    }
    .blogpost{
        margin:0 auto;
        padding-bottom:20px;
        background-color:gray;
        border:1px solid black;
    }
    .articlepost{
        padding-bottom:20px;
        background:var(--gradient-background )
    }
    .for-blog{
       display:flex;
       gap:20px;
    }
    .for-article{
        width: 30%;
        padding-top:20px;
        margin: 0 auto;
        background-color: #E8E8E8;
        border: 1px solid black;
        text-align: center;
    }
    .for-article a{
        text-decoration:none;
    }
    .article-btn a{
        padding: 10px;
        text-decoration: none;
        font-weight: 900;
        margin-bottom:20px;
        text-decoration:none;
    }
    .svg-section{
        display:flex;
        gap:30px;
    }
</style>
