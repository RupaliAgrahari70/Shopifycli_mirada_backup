<div>{{ section.settings.annoucement-id }}{{section.settings.head_id }}</div>
<div class="blogpost">
    <h2 class="center">{{ section.settings.blog_id.title }}</h2>
    <div class="for-blog">
        {%  assign max_article = section.settings.limit-number-id %}
   {% for article in blogs[section.settings.blog_id].articles limit:max_article %}
    <div class="for-article">
        <a href="{{ article.url }}">
        <img src="{{ article.image | image_url: width: auto, height: auto }}" alt="{{ article.image.alt | escape }}"
         loading="lazy" width="300px" height="200px">
        <h2>{{ article.title}}</h2>
        <h3>{{ article.published_at | date:"%D" }} | {{ article.author }}</h3>
        </a>
    </div>
    {% endfor %}
    </div>
</div>
<div class="articlepost color-{{ section.settings.color_scheme_id }}">
    {% assign article = section.settings.article_id %}
    <h2 class="center">{{article.title }}</h2>
    <div class="for-article">
        <a href="{{ article.url }}">
        <img src="{{ article.image | image_url: width: auto, height: auto }}" alt="{{ article.image.alt | escape }}"
         loading="lazy" width="300px" height="200px">
        <h2>{{ article.title}}</h2>
        <h3>{{ article.published_at | date:"%D" }} | {{ article.author }}</h3>
        </a>
        <div class="article-btn "><a href="{{ section.settings.button_link_id }}" class="button">{{ section.settings.button-txt-id }}</a></div>
    </div>
</div>
<div class="for-radio" >
    <h2 class="font-text" style="text-align:{{ section.settings.logo_aligment }};">helloooo</h2>
</div>
<div class="svg-section">
    {% for block in section.blocks %}
      <div class>
        {{ block.settings.svg_id }}
      </div>
    {% endfor %}
</div>
<div style="display:flex;justify-content:space-evenly" >
    <div>
        <img src="{{ section.settings.image_id | image_url: width: auto, height: auto }}" alt="{{section.settings.image_id.alt | escape }}"
         loading="lazy" width="100px" height="80px">
    </div>
    <div>
        <ul style="display:flex;justify-content:space-between; gap:20px;">
    {%  for link in linklists[section.settings.menu_id].links %}
      <li style="list-style:none">
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>
    {% endfor %}
    </ul>
    </div>
</div>
<div><a href="{{ section.settings.page_id }}">open page</a></div>
<div style="text-align:{{ section.settings.alignment }}">
