<section class="product-range-section" style="background:{{ section.settings.product-range-sectionid }}" >
  <div class="slider-cstm">
    <div class="product-range-heading">{{ section.settings.heading }}</div>
    <div class="product-range-slider">
      {% for block in section.blocks %}
        <div class="product-range-item">
          <div class="product-range-card">
            {% if block.settings.image != blank %}
              <div class="product-range-image">
                <img src="{{ block.settings.image | img_url: '' }}" alt="{{ block.settings.title }}">
              </div>
            {% endif %}
            <div class="product-range-content" style="background:{{ block.settings.productrangeblockid }}">
              {% if block.settings.title != blank %}
                <div class="product-range-title">{{ block.settings.title }}</div>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="product-range-text">{{ block.settings.text }}</div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="product-range-btn"  >
      <a href="{{ section.settings.button_link }}" style="background-color:{{ section.settings.buttoncolorid }}" class="view-more-btn">{{ section.settings.button_text }}</a>
    </div>
  </div>
</section>

<style>

.product-range-section {
  text-align: center;
  padding: 3rem 0;
  position:relative;
}
.slider-cstm {
    width: 78%;
    margin: 0 auto;
}
.product-range-heading {
  font-size: 4.5rem;
  font-weight: bold;
  color: #502c8e;
  margin-bottom: 40px;
  line-height: 1;
}
.product-range-slider{
  display:flex;
}
.product-range-slider .product-range-item {
  padding: 7px;
}
.product-range-card {
  width:100%;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 3px 8px rgba(0,0,0,0.1);
  overflow: hidden;
  transition: all 0.3s ease;
  height: 100%;
}
.product-range-slider .slick-list{
  overflow:hidden;
}
.product-range-image img {
  width: 100%;
  height: 175px;
  object-fit: cover;
}
.product-range-content {
  padding:0 16px;
 min-height: 199px;
 padding-bottom: 10px;
}
.product-range-title {
  font-size: 17px;
  letter-spacing:0.1px;
  font-weight: 600;
  text-align:left;
  color: #222;
    margin-top: 0;
    padding-top: 10px;
}
.product-range-text {
  font-size: 13px;
  color: #555;
  line-height:1.6;
   text-align:left;
}
.product-range-btn {
  margin-top: 30px;
}
.view-more-btn {
  color: #222;
  padding: 16px 40px;
  border-radius: 25px;
  text-decoration: none;
  font-weight: 900;
  transition: 0.3s ease;
}
.view-more-btn:hover {
  background-color: #f7a000;
}
.product-range-slider.slick-initialized.slick-slider {
    position: static;
}
 .slides-arrow{
    position: absolute;
    z-index: 1;
    border-radius: 50%;
    cursor: pointer;
    top: 50%;
    height:5%;
    width:5%
   /* background:white; */
    }
   svg.H_left_arrow {
    left: 6.7%;
  }
   svg.H_right_arrow {
    right: 6%;
    }
 .slides-arrow.slick-disabled path {
  fill:#D1B8ED !important;
  cursor: not-allowed;
}
 
.slides-arrow path {
  fill:#AD8BCE;
  transition: fill 0.3s ease;
}
 
.slides-arrow:hover path {
  fill: #52347E; 
}
@media(max-width:1024px){
  .product-range-heading {
    font-size: 3.5rem;
  }
}
@media(max-width:768px){
    svg.H_left_arrow {
    left: 4.7%;
  }
   .slides-arrow{
      top: 50%;
   }
   svg.H_right_arrow {
    right: 5%;
    }
  .product-range-content{
    padding: 0 16px;
    min-height: 215px;
  }
  .product-range-text {
    line-height: 1.5;
}
.view-more-btn {
    padding: 10px 20px;
}
@media(max-width:561px){
   svg.H_left_arrow {
    left: 2.7%;
  }
  .slides-arrow {
    top: 50%;
    }
   svg.H_right_arrow {
    right: 3%;
    }
  .product-range-content{
    padding: 0 16px;
     min-height: 200px;
  }
   .slides-arrow{
    top:50%;
   }

}
@media(max-width:426px)
    svg.H_left_arrow {
    left: 3.7%;
  }
   svg.H_right_arrow {
    right: 4%;
    }
    .product-range-heading {
    font-size: 32px;
    font-weight: 700;
    color: #502c8e;
    margin-bottom: 20px;
    line-height: 1;
}
 .product-range-content{
    min-height: 195px;
  }
}
</style>

 <script>
  document.addEventListener("DOMContentLoaded", function(){
    $('.product-range-slider').slick({
      slidesToShow: 4.2,
      slidesToScroll: 1,
      arrows: true,
      dots: false,
      infinite: false,
      autoplay: false,
      centerMode: false,
      variableWidth: false,
      prevArrow: '<svg class="H_left_arrow slides-arrow"xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" width="43" height="43" x="0" y="0" viewBox="0 0 24 24" style="enable-background:new 0 0 512 512" xml:space="preserve"><g><path d="M12 1a11 11 0 1 0 11 11A11.007 11.007 0 0 0 12 1zm2.707 14.293a1 1 0 1 1-1.414 1.414l-4-4a1 1 0 0 1 0-1.414l4-4a1 1 0 1 1 1.414 1.414L11.414 12z" fill="#A471DB" opacity="1" data-original="#000000"></path></g></svg>',
      nextArrow: '<svg class="H_right_arrow slides-arrow"xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" width="40" height="40" x="0" y="0" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512" xml:space="preserve"><g><path d="M256 0C114.837 0 0 114.837 0 256s114.837 256 256 256 256-114.837 256-256S397.163 0 256 0zm79.083 271.083L228.416 377.749A21.275 21.275 0 0 1 213.333 384a21.277 21.277 0 0 1-15.083-6.251c-8.341-8.341-8.341-21.824 0-30.165L289.835 256l-91.584-91.584c-8.341-8.341-8.341-21.824 0-30.165s21.824-8.341 30.165 0l106.667 106.667c8.341 8.341 8.341 21.823 0 30.165z" fill="#A471DB" opacity="1" data-original="#000000" class=""></path></g></svg>',
      
      responsive: [
       
        {
          breakpoint: 1025,
          settings: { slidesToShow: 3 }
        },
        {
          breakpoint: 769,
          settings: { slidesToShow: 2 }
        },
        {
          breakpoint: 560,
          settings: { slidesToShow: 1.5 }
        },
         {
          breakpoint: 428,
          settings: { slidesToShow: 1 }
        }
      ]
    });
  });
</script>


